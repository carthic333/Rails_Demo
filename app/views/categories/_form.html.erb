<%= form_for(@category) do |f| %>
  <div class="name">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="thumburl">
    <%= f.label :thumburl %>
    <% if @category.image.exists? %>
      <%= image_tag @category.image(:thumbnail) %>
      <%= check_box :delete, :checked %>
      <span>Delete</span>
    <% end %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
