<%= form_for(@category) do |f| %>
  <div class="input-group input-group-lg">
    <span class="input-group-addon" id="sizing-addon1"><%= f.label :name %></span>
    <%= f.text_field :name , class: "form-control"%>
 </div>
  <div class="thumburl">
    <%= f.label :thumburl %>
    <% if @category.image.exists? %>
      <%= image_tag @category.image(:thumbnail) %>
      <%= check_box :delete, :checked %>
      <span>Delete</span>
    <% end %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
