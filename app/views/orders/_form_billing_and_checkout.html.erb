<%= form_for @order, url: orders_authorize_path(@order), method: :post  do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :shipping_address%>
      <%= f.text_area :shipping_address, size: '30x5', :class => "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :billing_address%>
      <%= f.text_area :billing_address, size: '30x5', :class => "form-control" %>
    </div>
  </div>
  <br/>
  <br/>
  <div class="row">
    <div class="col-md-4">
      <label>Credit Card Number</label>
      <%= text_field :Credit_card, :number, :class => "col-md-12" %>
    </div>
    <div class="col-md-4">
      <label>Expiry (mm/yyyy)</label>
      <%= text_field :Credit_card, :exp_date, :class => "col-md-12" %>
    </div>
    <div class="col-md-4">
      <label>CVV</label>
      <%= text_field :Credit_card, :cvv_no, :class => "col-md-12" %>
    </div>
  </div>
  <ul class="pager">
    <%= f.submit "Submit", :class => 'btn btn-info' %>
    <%= link_to  "Cancel", orders_cancel_path, :class => 'btn btn-danger' %>
  </ul>
<% end %>
