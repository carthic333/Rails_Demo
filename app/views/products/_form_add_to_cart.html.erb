<%= form_for(locals[:product], url: products_add_to_cart_path(locals[:product]), method: :post) do |f| %>

<div class="input-group">
    <%= text_field :qty, :value, :class => "form-control" %>
  <span class="input-group-btn">
    <%= f.submit "Add to Cart", :class => "btn btn-default" %>
  </span>
</div>
<% end %>
